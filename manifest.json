{
    "name": "My Extension",
    "version": "1.0.0",
    "description": "Innovative web extension.",
    "author": "haw-lp",
    "manifest_version": 3,
    "icons": { 
        "16": "icons/48.png",
        "48": "icons/48.png",
        "128": "icons/48.png" 
    },
    "permissions": [
        "tabs",
        "storage",
        "nativeMessaging"
    ],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self' "
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "",
        "default_popup": "popup.html"
    }
}